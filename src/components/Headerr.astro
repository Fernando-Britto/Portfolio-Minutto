---
import AboutIcon from "../../public/icons/AboutIcon.astro"
import CodeIcon from "../../public/icons/CodeIcon.astro"
import LenguajeIcon from "../../public/icons/LenguajeIcon.astro"
import MailIcon from "../../public/icons/MailIcon.astro"
import {getI18N} from "../i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })

import { LANGUAGES } from '../i18n/ui';
import { getRouteFromUrl, useTranslatedPath, getLangFromUrl } from '../i18n/utils';

const route = getRouteFromUrl(Astro.url);
const lang = getLangFromUrl(Astro.url);
const translatePath = useTranslatedPath(lang);

const currentLocaleData = LANGUAGES[lang]
const otherLocales = Object.values(LANGUAGES).filter(
  (locale) => locale.code !== lang)

---

<header>
    <nav>
        <a href="#proyects"><CodeIcon width="16px" height="16px" />{i18n["NAV.PROYECT"]}</a>
        <a href="#about"><AboutIcon width="16px" height="16px" /> {i18n["NAV.ABOUT"]}</a>
        <a href="#contact"> <MailIcon width="16px" height="16px"/> </> {i18n["NAV.CONTACT"]}</a>
        {
            otherLocales.map((locale) => (
                <a href={translatePath(`/${route ? route : ''}`, locale.code)}><LenguajeIcon/>{currentLocaleData.name}</a>         
            ))
        } 
    </nav>
</header>

<style>
    header{
        z-index: 10;
        position: sticky;
        top: 0;
        height: 50px;
        width: 100%;
        animation: nav-shadown 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 200px;
    }

    nav{
        height: 50px;
        justify-content: center;
        align-items: center;
        display: flex;
    }

    @keyframes nav-shadown{
        100%{
            background-color: rgb(3 7 18);
        }
    }


    a, button {
        display: flex;
        align-items: center;
        gap: 5px;
        font-family: "Satoshi";
        font-weight: 500;
        font-size: 16px;
        color: #fafaf9e2;
        padding: 10px;
        
        &:hover{
            color:#b86bff;
        }
    }
</style>