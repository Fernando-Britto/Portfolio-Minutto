---
import Layout from '../layouts/Layout.astro'
import "../styles/fonts.css"
import MailIcon from '../../public/icons/MailIcon.astro'
import LinkedInIcon from '../../public/icons/LinkedInIcon.astro'
import {getI18N} from "../i18n"

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale })
---
<Layout>
    <section>
        <div class="hero">
            
            <div class="header">
                <div>   
                    <h1 class="titleHeader">{i18n.WELCOME}</h1> 
                    <h3 class="subTitleHeader"><strong>Front end</strong> developer.</h3>
                </div>
                <img src="/images/avatar2.jpg" alt="foto de avatar">
            </div>
            <div class="text_hero">
                <p>{i18n['HERO_DESCRIPTION.1']}</p> <strong>{i18n['HERO_DESCRIPTION.2']}</strong> <p set:html={i18n['HERO_DESCRIPTION.3']}/> <strong>{i18n['HERO_DESCRIPTION.4']}</strong>
            </div>
              
        </div>
        <div class="CTA" >
            <div>
                <h4 class="titleCTA">{i18n.CTA_TITLE}</h4>
                <h5 class="subCTA">{i18n.CTA_SUB}</h5>
            </div>
            <nav>
                <a href="">
                    <div class="available">
                        <MailIcon width="17px" height="17px" /> 
                        {i18n.BTN_CONTACT}
                    </div>
                </a>
                <a href="">
                    <div class="available">
                        <LinkedInIcon width="17px" height="17px" /> 
                        LinkedIn
                    </div>
                </a>
            </nav>
        </div>
    </section>
   
</Layout>
<style>
    /* .avatar{
        display: flex;
        align-items: center;
        gap:15px;
    } */

    .header{
        max-width: 52rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
    }

    img{
        width: 120px;
        height: 120px;
        border-radius: 50%;
    }
    .available{
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 7px;
        font-family: "Satoshi";
        font-weight: 700;
        font-size: 15px;
        color: #b86bff;
        border: solid 1px rgba(255, 255, 255, 0.2);
        transition: all 0.3s ease;
        padding: 4px 16px;
        gap:5px;
    }
    a{
        height: 50px;
        display: flex;
        place-items: center;
    }

    a:hover .available {
    background-color: rgba(69, 41, 95, 0.6);
    border-color: transparent;
    }
    
    section{
        margin: 120px 0 200px ;
        display: flex;
        max-width: 55rem;
        width: 100%;
        flex-direction: column;
        gap: 50px;
    }
    .titleHeader{
        color: #fafaf9 ;
        font-family: "Onest";
        font-weight: 800;
        font-size: 45px;
        opacity: .9;
    }
    

    .subTitleHeader{
        color: #fafaf980;
        font-family: "Satoshi";
        font-weight: 700; 
        font-size: 30px;
        margin-top: 5px;
    }
    strong{
        color: #b86bff;
    }

    .text_hero{
        color: #fafaf9A6;
        font-family: "Satoshi";
        font-weight: 500;
        font-size: 21px;   
    }

    p{
        display: inline;
    }

    /* .hero{
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;   
        gap: 35px;    
    } */

    .titleCTA{
        color: #fafaf9c7;
        font-family: "Satoshi";
        font-weight: 700; 
        font-size: 25px;
    } 

    .subCTA{
        color: #fafaf980;
        font-family: "Satoshi";
        font-weight: 400; 
        font-size: 19px;
    }

    .CTA{
        display: flex;
        justify-content: space-between;
        align-items: center;
        max-width: 750px;
    }

    nav{
        display: flex;
        gap: 20px;
    }
</style>